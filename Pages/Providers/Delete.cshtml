@page
@model SupermarketWEB.Pages.Providers.DeleteModel
@{
	ViewData["Title"] = "Delete Provider";
}

<h1 class="text-uppercase fw-bold fst-italic mb-3">Delete Provider</h1>

<h5>Are you sure you want to delete this?</h5>

<div>
    <h3 class="text-uppercase fst-italic mb-3">Provider</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Identification:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.Idetificacion)</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.Nombre)</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.Apellido)</dd>

        <dt class="col-sm-2">Address:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.Direccion)</dd>

        <dt class="col-sm-2">Birthday:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.cumpleanos)</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.Celular)</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Provider.Email)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Provider.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>
    </form>
</div>






