@page
@model SupermarketWEB.Pages.Providers.EditModel
@{
    ViewData["Title"] = "Edit Provider";
}

<h1 class="text-uppercase fw-bold fst-italic mb-3">Edit Provider</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Provider.Id" />
            <div class="form-group mb-3">
                <label asp-for="Provider.Idetificacion" class="control-label">Identification</label>
                <input asp-for="Provider.Idetificacion" class="form-control" />
                <span asp-validation-for="Provider.Idetificacion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provider.Nombre" class="control-label">Name</label>
                <input asp-for="Provider.Nombre" class="form-control" />
                <span asp-validation-for="Provider.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provider.Apellido" class="control-label">Last Name</label>
                <input asp-for="Provider.Apellido" class="form-control" />
                <span asp-validation-for="Provider.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provider.Direccion" class="control-label">Address</label>
                <input asp-for="Provider.Direccion" class="form-control" />
                <span asp-validation-for="Provider.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provider.cumpleanos" class="control-label">Birthday</label>
                <input asp-for="Provider.cumpleanos" class="form-control" />
                <span asp-validation-for="Provider.cumpleanos" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provider.Celular" class="control-label">Phone</label>
                <input asp-for="Provider.Celular" class="form-control" />
                <span asp-validation-for="Provider.Celular" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provider.Email" class="control-label">Email</label>
                <input asp-for="Provider.Email" class="form-control" />
                <span asp-validation-for="Provider.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}