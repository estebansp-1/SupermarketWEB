@page
@model SupermarketWEB.Pages.PayMode.IndexModel
@{
    ViewData["Title"] = "Index PayMode";
}
<h1 class="text-uppercase fw-bold fst-italic mb-3">Index PayMode</h1>

<!--Profe voy agregar diferentes diseños, tengo conocimientos en boostrap para que no pienses que es IA-->
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PayMode[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayMode[0].Observation)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PayMode)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>