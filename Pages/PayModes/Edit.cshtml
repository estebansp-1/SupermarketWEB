@page
@model SupermarketWEB.Pages.PayModes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-uppercase fw-bold fst-italic mb-3">Edit</h1>

<h4 class="text-uppercase fst-italic mb-3"> PayMode</h4>
<hr>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PayModes.Id" />
            <div class="form-group">
                <label asp-for="PayModes.Name" class="control-label"></label>
                <input asp-for="PayModes.Name" class="form-control" />
                <span asp-validation-for="PayModes.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayModes.Observation" class="control-label"></label>
                <input asp-for="PayModes.Observation" class="form-control" />
                <span asp-validation-for="PayModes.Observation" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}